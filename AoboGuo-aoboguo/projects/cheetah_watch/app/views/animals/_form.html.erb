<% if @animal.errors.present? %>
	<% @animal.errors.full_messages.each do |msg| %>
		<p><%= msg %></p>
	<% end %>
<% end %>

<%= form_for @animal do |f| %>
	<p> 
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>

	<p> 
		<%= f.label :species %><br>
		<%= f.text_field :species %>
	</p>

	<p> 
		<%= f.label :diet %><br>
		<%= f.select :diet, ['omnivore', 'carnivore', 'herbivore'] %>
	</p>

	<p> 
		<%= f.label :color %><br>
		<%= f.text_field :color %>
	</p>

	<p> 
		<%= f.label :region %><br>
		<%= f.text_field :region %>
	</p>

	<p> 
		<%= f.label :size %><br>
		<%= f.text_field :size %>
	</p>

	<p> 
		<%= f.label :age %><br>
		<%= f.text_field :age %>
	</p>

	<p> 
		<%= f.submit %><br>
	</p>

	<% end %>
