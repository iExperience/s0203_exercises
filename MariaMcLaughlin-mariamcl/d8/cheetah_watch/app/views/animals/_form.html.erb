<%= form_for @animal do |f| %>

	<% if @animal.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@article.errors.count, "error") %>
				Prohibited from being saved:
			</h2>
			<ul>
				<% @animal.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
			</div>
	<% end %>

	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %><br>
	</p>

	<p>
		<%= f.label :species %><br>
		<%= f.text_field :species %><br>
	</p>

	<p>
		<%= f.label :diet %><br>
		<%= f.select :diet, ['omnivore', 'carnivore', 'herbivore'] %><br>
	</p>

	<p>
		<%= f.label :size %><br>
		<%= f.text_field :size %><br>
	</p>

	<p>
		<%= f.label :color %><br>
		<%= f.text_field :color %><br>
	</p>

	<p>
		<%= f.label :region %><br>
		<%= f.text_field :region %><br>
	</p>

	<p>
		<%= f.label :age %><br>
		<%= f.text_field :age %><br>
	</p>

	<p>
	<%= f.submit %>
	</p>

<% end %>