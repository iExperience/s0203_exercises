<%= form_for(@place) do |f| %>

<% if @place.errors.present? %>
	<% @place.errors.full_messages.each do |msg| %>
		<p> <%= msg %> </p>
	<%end%>
<%end%>

	<div class="field"><%=f.label :name %>
		<%=f.text_field :name%></div>

	<div class="field"><%=f.label :address %>
		<%=f.text_field :address%></div>

	<div class="field"><%=f.label :rating %>
		<%=f.text_field :rating%></div>

	<div class="actions"><%=f.submit %></div>


<%end%>