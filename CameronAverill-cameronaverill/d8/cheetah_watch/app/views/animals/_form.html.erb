<p>Fill out this form to create a cool new animal for our app.</p>

<% if @animal.errors.present? %>
	<% @animal.errors.full_messages.each do |msg| %>
		<p> <%= msg %> </p>
	<%end%>
<%end%>

<%= form_for @animal do |f| %>
	<p> <%= f.label :name %>
	<%= f.text_field :name %> <p>

	<p> <%= f.label :species %>
	<%= f.text_field :species %> <p>

	<p> <%= f.label :diet %>
	<%= f.select :diet, ['omnivore', 'carnivore', 'herbivore'] %> <p>

	<p> <%= f.label :color %>
	<%= f.text_field :color %> <p>

	<p> <%= f.label :age %>
	<%= f.text_field :age %> <p>

	<p> <%= f.label :size %>
	<%= f.text_field :size %> <p>

	<p> <%= f.label :region %>
	<%= f.text_field :region %> <p>

	<p>
		<%= f.submit %> 
	</p>

<%end%>